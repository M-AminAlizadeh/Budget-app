<div class='d-flex bg-light mt-3 p-2'>
  <% if @category %>
    <div>
      <img width="60px" height="60px" src="<%= @category.icon_url %>" />
    </div>

    <div class='mx-3 flex-grow-1'>
      <div class="d-flex justify-content-between">
        <p><%= @category.name %></p>
        <!-- in here -->
        <span class='fw-bold'>$<%= number_with_precision(@entries.sum(:amount), precision: 2) %></span>
      </div>
      <span class='text-muted' style='font-size:12px;'><%= @category.created_at.strftime('%d %b %Y') %></span>
    </div>
  <% else %>
    <p>No category information available.</p>
  <% end %>
</div>

<div class="container">
  <div class="row justify-content-center">
    <nav class="navbar navbar-expand-lg navbar-light background-color-primary">
      <div class="container-fluid">
        <a href='/'>
          <img src="https://img.icons8.com/sf-black/35/ffffff/back.png" alt="back"/>
        </a>

        <span class='text-uppercase fs-5 text-light ml-2'>LOGIN</span>

        <span class='fs-6 text-light'>login</span>
      </div>
    </nav>

    <div id="login-form" class="col-md-6 p-0 mt-3" data-turbo-frame="login-form">
      <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: 'needs-validation', novalidate: true, data: { turbo: false } }) do |f| %>
      <div class="mt-2">
          <%= f.email_field :email, class: 'form-control', required: true, placeholder: "Email" %>
        </div>

        <div class="mt-2">
          <%= f.password_field :password, class: 'form-control', required: true, placeholder: "Password" %>
        </div>
        
        <div class="mt-3 text-center">
          <%= f.submit 'Log in', class: 'btn btn-primary', data: { turbo: false }  %>
        </div>
        
        <div class="mt-2 text-center">
          <%= link_to "Forgot password?", new_user_password_path, class: 'text-secondary text-decoration-none' %>
        </div>
      <% end %>
    </div>
  </div>
</div>

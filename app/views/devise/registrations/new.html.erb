<div class="container">
  <div class="row justify-content-center">
    <nav class="navbar navbar-expand-lg navbar-light background-color-primary">
      <div class="container-fluid">
        <a href='/'>
          <img src="https://img.icons8.com/sf-black/35/ffffff/back.png" alt="back"/>
        </a>
        <h1 class='text-uppercase fs-5 text-light ml-2'>REGISTER</h1>
        <span class='fs-6 text-light'>Next</span>
      </div>
    </nav>

    <div class="col-md-6 p-0 mt-3">
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: 'needs-validation', novalidate: true }) do |f| %>
        <div class='border d-flex align-items-center mt-2'>
            <img width="50" height="50" src="https://img.icons8.com/ios/50/cccccc/user--v1.png" alt="user--v1"/>
            <span class='text-muted'>Upload picture</span>
        </div>
        
        <div class='mt-2'>
            <%= f.text_field :name, class: 'form-control', required: true, placeholder: "Full name" %>
        </div>
      
        <div class='mt-2'>
          <%= f.email_field :email, class: 'form-control', required: true, placeholder: "Email" %>
        </div>
      
        <div class='mt-2'>
          <%= f.password_field :password, class: 'form-control', required: true, placeholder: "Password" %>
        </div>

        <div class='mt-2'>
          <%= f.password_field :password_confirmation, class: 'form-control', required: true, placeholder: "Re-enter Password" %>
        </div>

        <div class='my-3'>
          <%= f.submit 'Register', class: 'btn btn-primary' %>
        </div>

        <%= render 'devise/shared/error_messages', resource: resource %>
      <% end %>
    </div>
  </div>
</div>
